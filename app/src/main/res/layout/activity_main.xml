    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:paddingRight="10dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Home"
                android:id="@+id/textView2"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:padding="0dp"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView3"
                android:textSize="48sp"
                android:singleLine="true"
                android:text="    " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Away"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/team1score"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:padding="0dp"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" vs "
                android:id="@+id/vsHeader"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/team2score"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fouls:"
                android:id="@+id/fouls1header"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/fouls1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fouls:"
                android:id="@+id/fouls2header"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/fouls2"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Outs:"
                android:id="@+id/timeouts1header"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/timeouts1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Outs:"
                android:id="@+id/timeouts2header"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/timeouts2"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +1"
                android:id="@+id/team1score1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +1"
                android:id="@+id/team2score1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +2"
                android:id="@+id/team1score2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +2"
                android:id="@+id/team2score2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +3"
                android:id="@+id/team1score3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score +3"
                android:id="@+id/team2score3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fouls +1"
                android:id="@+id/foulsOne"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fouls +1"
                android:id="@+id/foulsTwo"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME OUTS -1"
                android:id="@+id/timeoutsOne"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME OUTS -1"
                android:id="@+id/timeoutsTwo"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickButton" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reset All"
            android:id="@+id/reset"
            android:nestedScrollingEnabled="false"
            android:onClick="clickButton" />

    </LinearLayout>


